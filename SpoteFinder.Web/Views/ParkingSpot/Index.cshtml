@model IEnumerable<SpoteFinder.Domain.Entities.ParkingSpot>

@{
    ViewData["Title"] = "Available Parking Spots";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Spot ID</th>
            <th>Address</th>
            <th>Price Per Hour</th>
            <th>Availability</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var spot in Model)
        {
            <tr id="spot-@spot.SpotId">
                <td>@spot.SpotId</td>
                <td>@spot.Address</td>
                <td>@spot.PricePerHour</td>
                <td>
                    <span class="availability-status">@((spot.IsAvailable) ? "Available" : "Booked")</span>
                </td>
                <td>
                    <a href="@Url.Action("Details", "ParkingSpot", new { id = spot.SpotId })"
                       class="btn btn-primary">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://cdnjs.cloudflare.com/ajax/libs/signalr/3.1.7/signalr.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.15/signalr.min.js"></script>
<script src="~/js/site.js"></script>
